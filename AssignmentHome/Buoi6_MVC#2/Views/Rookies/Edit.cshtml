@model PersonUpdateModel

@{
    ViewData["Title"] = "Edit";
    var value = ViewData["Index"]?.ToString() ?? "";
    var index = !string.IsNullOrEmpty(value) ? int.Parse(value) : 0 ;
}
<div class="text-center">
    <h1>Edit person</h1>
    <form asp-action="Update" asp-controller="Rookies" asp-route-index = "@index" method="post" class="col-8 offset-2 mt-5">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" type="text" class="form-control" placeholder="your first name">
            <span asp-validation-for="FirstName" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" type="text" class="form-control" placeholder="your last name">
            <span asp-validation-for="LastName" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="your phone">
            <span asp-validation-for="PhoneNumber" class="form-text text-danger"></span>
        </div>
         <div class="form-group">
            <label asp-for="BirthDay"></label>
            <input asp-for="BirthDay" type="text" class="form-control" placeholder="your Address">
            <span asp-validation-for="BirthDay" class="form-text text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <button  class="btn btn-secondary" asp-action="index" asp-controller="Rookies">Cancel</button>

    </form>
</div>