@model PersonCreateModel

@{
    ViewData["Title"] = "Create";
}
<div class="text-center">
    <h1>Create new person</h1>
    <form asp-action="create" asp-controller="Rookies" method="post" class="col-8 offset-2 mt-5">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" type="text" class="form-control" placeholder="your first name">
            <span asp-validation-for="FirstName" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" type="text" class="form-control" placeholder="your last name">
            <span asp-validation-for="LastName" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender"></label>
            <select class="form-control" id="exampleFormControlSelect1" asp-for="Gender">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="DOB"></label>
            <input asp-for="DOB" type="date" class="form-control" placeholder="your birthday">
            <span asp-validation-for="DOB" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="your phone">
            <span asp-validation-for="PhoneNumber" class="form-text text-danger"></span>
        </div>
         <div class="form-group">
            <label asp-for="BirthDay"></label>
            <input asp-for="BirthDay" type="text" class="form-control" placeholder="your Address">
            <span asp-validation-for="BirthDay" class="form-text text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">submit</button>
    </form>
</div>