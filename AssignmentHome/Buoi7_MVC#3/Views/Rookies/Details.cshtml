@model PersonDetailModel

@{
    ViewData["Title"] = "Details";
}
<div class="text-left">
    <h1>Infor person</h1>
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <label class="form-control"> @Model.FirstName </label>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <label class="form-control"> @Model.FirstName </label>
        </div>
        <div class="form-group">
            <label asp-for="Gender"></label>
            <label class="form-control"> @Model.LastName </label>
        </div>
        <div class="form-group">
            <label asp-for="DOB"></label>
            <label class="form-control"> @Model.DOB </label>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <label class="form-control"> @Model.PhoneNumber </label>
        </div>
        <div class="form-group">
            <label asp-for="BirthDay"></label>
            <label class="form-control"> @Model.BirthDay </label>
        </div>

        <a role="button" class="btn btn-primary" asp-action="Index" asp-controller="Rookies">Back to List </a>
        <a class="btn btn-primary" href="#" role="button" data-toggle="modal"
                        data-target="#exampleModal">Delete</a>



</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="DeleteAndRedirectToView" asp-controller="Rookies" asp-route-index="" method="post">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you want to delete?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Confirm</button>
            </div>
            </form>
        </div>
    </div>
    </div>
